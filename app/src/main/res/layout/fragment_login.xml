<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:background="@color/color_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginFragment">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.ar.sceneform.samples.hellosceneform.ui.text_views.GilroyBold
            android:layout_marginTop="100dp"
            android:textSize="32sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_black"
            android:text="Authorization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.ar.sceneform.samples.hellosceneform.ui.text_views.GilroySemiBold
            android:layout_marginTop="70dp"
            android:layout_marginStart="25dp"
            android:textSize="18sp"
            android:textColor="@color/color_black"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.ar.sceneform.samples.hellosceneform.ui.text_views.CustomEditText
            android:foregroundTint="@color/color_main_blue"
            style="@style/AppTheme"
            android:id="@+id/login_edit_text"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:hint="Enter your login"
            android:textSize="18sp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.ar.sceneform.samples.hellosceneform.ui.text_views.GilroySemiBold
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:textSize="18sp"
            android:textColor="@color/color_black"
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.ar.sceneform.samples.hellosceneform.ui.text_views.CustomEditText
            style="@style/AppTheme"
            android:id="@+id/password_edit_text"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:hint="Enter your password"
            android:textSize="18sp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.ar.sceneform.samples.hellosceneform.ui.text_views.GilroySemiBold
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/color_black"
                android:text="Remember Me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/checkbox"
                android:buttonTint="@color/color_main_blue"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <FrameLayout
            android:layout_marginBottom="70dp"
            android:id="@+id/login_btn"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/main_gradient_button"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.ar.sceneform.samples.hellosceneform.ui.text_views.GilroyBold
                android:layout_margin="15dp"
                android:textSize="18sp"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:text="Log in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

</ScrollView>